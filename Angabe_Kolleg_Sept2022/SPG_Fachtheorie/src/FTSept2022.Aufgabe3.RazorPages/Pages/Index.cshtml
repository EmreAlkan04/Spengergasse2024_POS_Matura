@page
@model IndexModel

<div>
    <h1 class="h3">Klausurprüfung aus Fachtheorie</h1>
    <p>Bitte füllen Sie diese Daten in der Datei <em>SPG_Fachtheorie.Aufgabe3RazorPages/Pages/Index.cshtml</em> am Beginn Ihrer Arbeit aus.</p>
    <table class="table table-sm mb-5 border border-primary">
        <tr>
            <th style="width:10em">Maturaaccount</th>
            <td style="width:30em">(Bitte ausfüllen)</td>
        </tr>
        <tr>
            <th>Vorname</th>
            <td>(Bitte ausfüllen)</td>
        </tr>
        <tr>
            <th>Zuname</th>
            <td>(Bitte ausfüllen)</td>
        </tr>
        <tr>
            <th>Klasse</th>
            <td>(Bitte ausfüllen)</td>
        </tr>
    </table>
</div>
<div class="mb-3">
    @if (!string.IsNullOrEmpty(Model.RegistrationNumber))
    {
        <h5>Angemeldet als User @Model.RegistrationNumber</h5>
        <form method="post" asp-page-handler="logout">
            <button class="btn btn-primary">Logout</button>
        </form>

    }
    else
    {
        <h5>
            Wähle einen User aus:
        </h5>
        <form method="post">
            <select asp-for="SelectedUser"
                class="form-control"
                asp-items="Model.UserItems"></select>
            <button class="btn btn-primary">Login</button>
        </form>
    }
</div>
<div>
    <h1 class="h5">Daten der Tabelle Student</h1>
    <p>Diese Tabelle dient zum Testen des Datenbankzugriffes.</p>
</div>
<table class="table table-sm">
    <thead>
        <tr>
            <th>RegistrationNumber</th>
            <th>Firstname</th>
            <th>Lastname</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var s in Model.Students)
        {
            <tr>
                <td>@s.RegistrationNumber</td>
                <td>@s.FirstName</td>
                <td>@s.LastName</td>
            </tr>
        }
    </tbody>
</table>
