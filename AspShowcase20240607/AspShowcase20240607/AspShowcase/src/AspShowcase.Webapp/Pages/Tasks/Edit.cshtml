@page "{taskGuid:Guid}"
@model AspShowcase.Webapp.Pages.Tasks.EditModel
@{
}
<h3>Task editieren</h3>

<form method="post" style="max-width:50em; border:1px solid black; padding: 1em; margin-left:1em">
    <div class="mb-3">
        <label class="form-label">Subject</label>
        <input type="text" class="form-control" asp-for="EditTask.Subject">
    </div>
    <div class="mb-3">
        <label class="form-label">Title</label>
        <input type="text" class="form-control" asp-for="EditTask.Title">
    </div>
    <div class="mb-3">
        <label class="form-label">Expiration date</label>
        <input type="datetime-local" class="form-control" asp-for="EditTask.ExpirationDate">
    </div>
    <div class="mb-3">
        Teacher: @Model.TaskDto.Teachername
    </div>
    <div class="mb-3">
        Max Points: @Model.TaskDto.MaxPoints
    </div>
    <div class="mb-3">
        <div style="color:red;" asp-validation-summary="All"></div>
    </div>
    <div class="mb-3">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>