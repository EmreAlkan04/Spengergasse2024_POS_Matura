@page "{teamGuid:Guid}"
@model AspShowcase.Webapp.Pages.Tasks.AddModel
@{
}
<h3>Neuer Task</h3>
<p>Hier kannst du einen neuen Task für das Team @Model.TaskDto.Teamname anlegen.</p>

<form method="post" style="max-width:50em; border:1px solid black; padding: 1em; margin-left:1em">
    <div class="mb-3">
        <label class="form-label">Subject</label>
        <input type="text" class="form-control" asp-for="NewTask.Subject">
    </div>
    <div class="mb-3">
        <label class="form-label">Title</label>
        <input type="text" class="form-control" asp-for="NewTask.Title">
    </div>
    <div class="mb-3">
        <label class="form-label">Teacher</label>
        <select class="form-control" asp-for="NewTask.TeacherGuid" asp-items="@Model.Teachers"></select>
    </div>
    <div class="mb-3">
        <label class="form-label">Expiration date</label>
        <input type="datetime-local" class="form-control" asp-for="NewTask.ExpirationDate">
    </div>
    <div class="mb-3">
        <label class="form-label">Max. Points</label>
        <input type="number" class="form-control" asp-for="NewTask.MaxPoints">
    </div>
    <div class="mb-3">
        <div style="color:red;" asp-validation-summary="All"></div>
    </div>
    <div class="mb-3">
       <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>